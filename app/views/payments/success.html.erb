<%= render "layouts/navbar" %>
<div class="center">
   <div class="alert alert-primary" role="alert">
      Congratulations You have booked this property successfully.
   </div>
</div>
<div class="con">
   <h1>Your Booked Property Details</h1>
   <p><strong>Type:</strong> <%= @property.property_type.name%></p>
   <p><strong>Size (in sqft):</strong> <%= @property.size_sq_ft %></p>
   <p><strong>Bedrooms:</strong> <%= @property.bedroom %></p>
   <p><strong>Bathrooms:</strong> <%= @property.bathroom %></p>
   <p><strong>Furnishing:</strong> <%= @property.furnishing %></p>
   <p><strong>Resident Type:</strong> <%= @property.resident_type %></p>
   <p><strong>Listed By:</strong> <%= @property.listed_by %></p>
   <p><strong>Rent:</strong> <%= @property.rent %></p>
   <br>
   <p><%= link_to "Payment History", payment_payment_history_path , class:'btn btn-success' %></p>

   <div class="aaa">
   <h3>Add Reviews</h3>
   <div id="myDIV">
      <%= form_with model: [ @property, @property.reviews.build ] do |form| %>
      <div class="cas">
         <p>
            <%= form.label :rating %><br>
            <%= form.number_field :rating %>
         </p>
         <p>
            <%= form.label :comment%><br>
            <%= form.text_area :comment %>
         </p>
         <p>
            <%= form.submit %>
         </p>
         <% end %>
      </div>
   </div>
</div>

<style>
   .cas{
   width:40%;
   height:20%;
   }
   .con{
   font: italic small-caps bold 20px/40px Georgia, serif;
   padding-left: 3%;
   }
   
   .center{
   padding-left: 0%;padding-top: 0%;
   padding-right: 0%;
   width:100%;
   height:60%;
   }
</style>
<script>
   function myFunction() {
     var x = document.getElementById("myDIV");
     if (x.style.display === "none") {
       x.style.display = "block";
     } else {
       x.style.display = "none";
     }
   }
</script>